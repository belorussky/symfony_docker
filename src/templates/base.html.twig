<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

{#        {% block javascripts %}#}
{#            #}{#{{ encore_entry_script_tags('app') }}#}
{#        {% endblock %}#}
    </head>
    <body>
        {% block TodoStuff %}{% endblock %}
        <header class="p-2">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-4">
                        <a href="{{ path('home') }}">Let's Do</a>
                    </div>
                    <div class="col-12 col-lg-4">
                        <input type="text" placeholder="Search">
                    </div>
                    <div class="col-12 col-lg-4">
                        <a href="{{ path('add-todo') }}">+</a>
                    </div>
                </div>
            </div>
        </header>
        <div class="container">
            <div class="row">
                <div class="col-9 wrapper pt-4">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
{% block javascripts %}
    <script src="/build/runtime.js" type="text/javascript"></script>
    <script src="/build/app.js" type="text/javascript"></script>
{% endblock %}
    </body>
</html>
